mixin cardProfile(user, email, urlphoto)
    div(class="card mb-3" style="max-width:540px;")
        div(class="row g-0")
            div(class="col-md-4")   
                img(src=urlphoto class="img-fluid rounded-start" alt="profile photo")
            div(class="col-md-8")
                div(class="card-body")
                    h4(class="card-title")=user
                    p(class="card-text")=email